<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Moa" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>

        <!-- Customize your theme here. -->

        <item name="textFillColor">@color/text_grey</item>
    </style>

    <style name="CustomTimePicker">
        <item name="android:textColorPrimary">@color/design_default_color_on_secondary</item><!-- text color -->
        <item name="colorControlNormal">@color/primary</item><!-- divider color -->
        <item name="android:textSize">16sp</item>
    </style>
</resources>