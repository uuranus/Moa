<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Moa" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>

        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>

        <!-- Customize your theme here. -->

        <item name="textFillColor">@color/textColorSecondary</item>
    </style>

    <style name="CustomTimePicker">

        <item name="android:textColorPrimary">@color/textColorPrimary</item><!-- text color -->
        <item name="colorControlNormal">@color/colorPrimary</item><!-- divider color -->

        <item name="android:textSize">16sp</item>
    </style>
</resources>