<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MyPage.BadgeInfoActivity">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="18dp"
        android:layout_height="24dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/backgroundWhite"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뱃지 목록"
        android:textColor="@color/backgroundWhite"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/backButton" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="37dp"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backButton" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="27dp"
        android:layout_marginVertical="33dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewPager2">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:backgroundTint="@color/backgroundWhite"
            android:src="@drawable/ic_baseline_notifications_24_white" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:backgroundTint="@color/backgroundWhite"
            android:src="@drawable/ic_baseline_notifications_24_white" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:backgroundTint="@color/backgroundWhite"
            android:src="@drawable/ic_baseline_notifications_24_white" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:backgroundTint="@color/backgroundWhite"
            android:src="@drawable/ic_baseline_notifications_24_white" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:backgroundTint="@color/backgroundWhite"
            android:src="@drawable/ic_baseline_notifications_24_white" />
    </LinearLayout>

    <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginBottom="25dp"
        app:dotsColor="@color/backgroundWhite"
        app:dotsSize="15dp"
        app:dotsSpacing="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>